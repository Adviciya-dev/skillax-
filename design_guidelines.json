{
  "identity": {
    "persona": "E1",
    "mission": "Create an Ultra-Premium Digital Marketing Academy website that feels like a luxury tech product.",
    "principles": [
      "Fusion over Imitation: Mix Education Authority with SaaS Precision.",
      "Emotion First: Trust, Ambition, and Future-Proofing.",
      "Content is King: Every pixel must sell the 'Skillax' dream.",
      "Zoom in: Focus on details (faces, screens, data).",
      "Negative Space: Luxurious breathing room.",
      "Contrast: High contrast for readability and impact."
    ]
  },
  "theme_strategy": {
    "default_mode": "light",
    "modes": {
      "light": {
        "name": "Professional Trust",
        "background": "#F8FAFC",
        "foreground": "#0F172A",
        "card": "#FFFFFF",
        "border": "#E2E8F0",
        "primary": "#2B2D9C",
        "primary_foreground": "#FFFFFF",
        "accent": "#F59E0B",
        "accent_foreground": "#FFFFFF"
      },
      "dark": {
        "name": "Luxury Night",
        "background": "#020617",
        "foreground": "#F1F5F9",
        "card": "#0F172A",
        "border": "#1E293B",
        "primary": "#6366F1",
        "primary_foreground": "#FFFFFF",
        "accent": "#F59E0B",
        "accent_foreground": "#FFFFFF"
      }
    },
    "toggle_behavior": "User-controlled toggle in navbar. Persist preference in local storage."
  },
  "typography": {
    "headings": {
      "font_family": "Outfit, sans-serif",
      "weights": ["500", "600", "700"],
      "usage": "All headings (h1-h6), hero text, stats numbers.",
      "letter_spacing": "tracking-tight"
    },
    "body": {
      "font_family": "Plus Jakarta Sans, sans-serif",
      "weights": ["400", "500"],
      "usage": "Paragraphs, navigation, buttons, labels.",
      "letter_spacing": "tracking-normal"
    },
    "import_url": "https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
  },
  "colors": {
    "brand": {
      "royal_blue": "#2B2D9C",
      "electric_indigo": "#4F46E5",
      "amber_glow": "#F59E0B",
      "success_green": "#10B981"
    },
    "functional": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    }
  },
  "layout_strategies": {
    "hero_section": {
      "type": "Tetris Grid",
      "structure": "Grid with 12 columns. Left 7 cols for Headline/CTA. Right 5 cols for 3D/Parallax Image.",
      "motion": "Staggered reveal of text. Parallax effect on image scroll."
    },
    "courses_section": {
      "type": "Bento Grid",
      "structure": "Asymmetric grid. Featured course takes 2x2. Standard courses 1x1.",
      "interaction": "Hover: Scale up 1.02, shadow-xl, border-primary/50."
    },
    "stats_section": {
      "type": "Glass Row",
      "structure": "Flex row with glassmorphism cards.",
      "motion": "Counterup animation on view."
    },
    "certifications_section": {
      "type": "Infinite Marquee",
      "structure": "Horizontal scrolling logos. Greyscale by default, color on hover."
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-primary text-white rounded-full px-8 py-3 hover:shadow-lg hover:scale-105 transition-all duration-300 font-semibold",
      "secondary": "bg-transparent border-2 border-primary text-primary rounded-full px-8 py-3 hover:bg-primary/5 transition-all duration-300 font-semibold",
      "ghost": "text-foreground hover:text-primary transition-colors font-medium"
    },
    "cards": {
      "base": "bg-card border border-border rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow duration-300",
      "glass": "bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6"
    },
    "inputs": {
      "base": "bg-background border border-input rounded-lg px-4 py-3 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all outline-none"
    }
  },
  "motion_guidelines": {
    "library": "framer-motion",
    "default_transition": {
      "type": "spring",
      "stiffness": 100,
      "damping": 20
    },
    "scroll_reveal": "Fade in up (y: 20 -> 0, opacity: 0 -> 1)",
    "hover_effects": "Scale 1.02 or 1.05. Never rotate unless iconic."
  },
